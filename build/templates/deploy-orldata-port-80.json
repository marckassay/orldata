{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {
      "type": "string",
      "metadata": {
        "description": "The name that will be given to the container group created from this template."
      }
    },
    "registryImageUrl": {
      "type": "string",
      "metadata": {
        "description": "The Url of the container registry and its image to be used in this template."
      }
    },
    "imageRegistryCredentials": {
      "type": "array",
      "metadata": {
        "description": "The image registry credentials by which the container group is created from."
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2018-10-01",
      "location": "[resourceGroup().location]",
      "name": "[parameters('containerGroupName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "properties": {
        "osType": "Linux",
        "restartPolicy": "Always",
        "imageRegistryCredentials": "[parameters('imageRegistryCredentials')]",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "orldata",
          "ports": [
            {
              "protocol": "TCP",
              "port": "80"
            }
          ]
        },
        "containers": [
          {
            "name": "orldata-app",
            "properties": {
              "image": "[parameters('registryImageUrl')]",
              "ports": [
                {
                  "protocol": "TCP",
                  "port": "80"
                }
              ],
              "resources": {
                "requests": {
                  "memoryInGB": "1.5",
                  "cpu": "1.0"
                }
              }
            }
          }
        ]
      }
    }
  ]
}
