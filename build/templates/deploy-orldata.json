{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "force": {
      "type": "bool",
      "metadata": {
        "description": "If true, ."
      }
    },
    "sslKey": {
      "type": "string",
      "metadata": {
        "description": "The private ssl key. Must be encoded in base64."
      }
    },
    "sslCrt": {
      "type": "string",
      "metadata": {
        "description": "The ssl certificate. Must be encoded in base64."
      }
    },
    "nginxConf": {
      "type": "string",
      "metadata": {
        "description": "The nginx configuration file. Must be encoded in base64."
      }
    },
    "containerGroupName": {
      "type": "string",
      "metadata": {
        "description": "The name that will be given to the container group created from this template."
      }
    },
    "registryImageUrl": {
      "type": "string",
      "metadata": {
        "description": "The Url of the container registry and its image to be used in this template."
      }
    },
    "imageRegistryCredentials": {
      "type": "array",
      "metadata": {
        "description": "The image registry credentials by which the container group is created from."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "location": "[resourceGroup().location]",
      "name": "[parameters('containerGroupName')]",
      "properties": {
        "mode": "[if(equals(parameters('force'), 'true'),'Complete','Incremental')]",
        "osType": "Linux",
        "restartPolicy": "Never",
        "imageRegistryCredentials": "[parameters('imageRegistryCredentials')]",
        "ipAddress": {
          "ports": [
            {
              "protocol": "TCP",
              "port": 443
            }
          ],
          "type": "Public",
          "dnsNameLabel": "orldata"
        },
        "volumes": [
          {
            "name": "nginx-config",
            "secret": {
              "ssl.key": "[parameters('sslKey')]",
              "ssl.crt": "[parameters('sslCrt')]",
              "nginx.conf": "[parameters('nginxConf')]"
            }
          },
          {
            "name": "node-modules",
            "emptyDir": {
            }
          },
          {
            "name": "lockfile",
            "emptyDir": {
            }
          },
          {
            "name": "dist",
            "emptyDir": {
            }
          }
        ],
        "containers": [
          {
            "name": "nginx-with-ssl",
            "properties": {
              "image": "nginx",
              "command": [
                "nginx",
                "-g",
                "daemon off;"
              ],
              "ports": [
                {
                  "protocol": "TCP",
                  "port": 443
                },
                {
                  "protocol": "TCP",
                  "port": 2222
                }
              ],
              "resources": {
                "requests": {
                  "memoryInGB": 1.5,
                  "cpu": 1.0
                }
              },
              "volumeMounts": [
                {
                  "name": "nginx-config",
                  "mountPath": "/etc/nginx",
                  "readOnly": true
                },
                {
                  "name": "dist",
                  "mountPath": "/usr/share/nginx/html",
                  "readOnly": true
                }
              ]
            }
          },
          {
            "name": "orldata-app",
            "properties": {
              "image": "[parameters('registryImageUrl')]",
              "command": [
                "/bin/ash",
                "-c",
                "mkdir test; touch test/myfile; tail -f /dev/null"
              ],
              "resources": {
                "requests": {
                  "memoryInGB": 1.5,
                  "cpu": 1.0
                }
              },
              "volumeMounts": [
                {
                  "name": "node-modules",
                  "mountPath": "/usr/src/app/node_modules",
                  "readOnly": false
                },
                {
                  "name": "lockfile",
                  "mountPath": "/tmp",
                  "readOnly": false
                },
                {
                  "name": "dist",
                  "mountPath": "/usr/src/app/dist",
                  "readOnly": false
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
