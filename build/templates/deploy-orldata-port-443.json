{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sslKey": {
      "type": "string",
      "metadata": {
        "description": "The private ssl key. Must be encoded in base64."
      }
    },
    "sslCrt": {
      "type": "string",
      "metadata": {
        "description": "The ssl certificate. Must be encoded in base64."
      }
    },
    "nginxConf": {
      "type": "string",
      "metadata": {
        "description": "The nginx configuration file. Must be encoded in base64."
      }
    },
    "containerGroupName": {
      "type": "string",
      "metadata": {
        "description": "The name that will be given to the container group created from this template."
      }
    },
    "registryImageUrl": {
      "type": "string",
      "metadata": {
        "description": "The Url of the container registry and its image to be used in this template."
      }
    },
    "imageRegistryCredentials": {
      "type": "array",
      "metadata": {
        "description": "The image registry credentials by which the container group is created from."
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2018-10-01",
      "location": "[resourceGroup().location]",
      "name": "[parameters('containerGroupName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "properties": {
        "osType": "Linux",
        "restartPolicy": "Always",
        "imageRegistryCredentials": "[parameters('imageRegistryCredentials')]",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "orldata",
          "ports": [
            {
              "protocol": "TCP",
              "port": "443"
            }
          ]
        },
        "volumes": [
          {
            "name": "nginx-config",
            "secret": {
              "ssl.key": "[parameters('sslKey')]",
              "ssl.crt": "[parameters('sslCrt')]",
              "nginx.conf": "[parameters('nginxConf')]"
            }
          }
        ],
        "containers": [
          {
            "name": "nginx-with-ssl",
            "properties": {
              "image": "nginx:alpine",
              "ports": [
                {
                  "protocol": "TCP",
                  "port": "443"
                }
              ],
              "resources": {
                "requests": {
                  "memoryInGB": "1.5",
                  "cpu": "1.0"
                }
              },
              "volumeMounts": [
                {
                  "name": "nginx-config",
                  "mountPath": "/etc/nginx"
                }
              ]
            }
          },
          {
            "name": "orldata-app",
            "properties": {
              "image": "[parameters('registryImageUrl')]",
              "resources": {
                "requests": {
                  "memoryInGB": "1.5",
                  "cpu": "1.0"
                }
              }
            }
          }
        ]
      }
    }
  ]
}
