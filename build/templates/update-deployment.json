{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hostName": {
      "type": "string",
      "metadata": {
        "description": "The name of the App Service. This will also be the subdomain name of its Url (eg: 'orldata.azurewebsites.net')."
      }
    },
    "imageUri": {
      "type": "string",
      "metadata": {
        "description": "The registry path with image name. This is the image Uri."
      }
    },
    "dockerRegistryServerUsername": {
      "type": "securestring",
      "metadata": {
        "description": "The name of the container registry."
      }
    },
    "dockerRegistryServerPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The guid generated by Azure."
      }
    },
    "dockerRegistryServerUrl": {
      "type": "securestring",
      "metadata": {
        "description": "The Url to the Azure Container Registry."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2019-08-01",
      "name": "[parameters('hostName')]",
      "location": "[resourceGroup().location]",
      "kind": "app,linux,container",
      "properties": {
        "enabled": true,
        "siteConfig": {
          "linuxFxVersion": "[concat('DOCKER|',parameters('imageUri'))]",
          "publishingUsername": "[concat('$', parameters('hostName'))]",
          "appSettings": [
            {
              "name": "DOCKER_REGISTRY_SERVER_USERNAME",
              "value": "[parameters('dockerRegistryServerUsername')]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_PASSWORD",
              "value": "[parameters('dockerRegistryServerPassword')]"
            },
            {
              "name": "DOCKER_REGISTRY_SERVER_URL",
              "value": "[parameters('dockerRegistryServerUrl')]"
            }
          ]
        }
      }
    }
  ],
  "outputs": {

  }
}
