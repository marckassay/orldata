{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "paths": {
      "@app/*": [
        "./src/app/*"
      ],
      "@core/*": [
        "./src/app/core/*"
      ],
      "@permits/*": [
        "./src/app/permits/*"
      ]
    },
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
